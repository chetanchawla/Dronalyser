<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="185dp"
        android:layout_above="@+id/animDrone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="-28dp"
        android:src="@drawable/drone_icon" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/animDrone"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="164dp"
        android:src="@drawable/drone_flying"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progBar"
        android:layout_width="115dp"
        android:layout_height="128dp"
        android:layout_above="@+id/animDrone"
        android:layout_alignEnd="@+id/animDrone"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="-269dp"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/droneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/animDrone"
        android:layout_alignStart="@+id/animDrone"
        android:layout_alignEnd="@+id/animDrone"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="-459dp"
        android:fontFamily="@font/prod_sans_reg"
        android:gravity="center"
        android:text="Calling Drone to your current location"
        android:textAlignment="center"
        android:textSize="25dp" />

</RelativeLayout>